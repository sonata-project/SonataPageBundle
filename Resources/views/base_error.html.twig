{% set title = block('title') ? block('title') : 'Sonata Project - Internal Error' %}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        {% block page_stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/sonataadmin/bootstrap/bootstrap.css') }}" type="text/css" media="all" >
            <link rel="stylesheet" href="{{ asset('bundles/sonatapage/default.css') }}" type="text/css" media="all" >
        {% endblock %}

        <title>{{ title }}</title>
    </head>

    <body class="sonata-bc">
        <div class="container">
            <div class="content">
                <div class="page-header">
                    <h1>{{ title }}</h1>
                </div>

                <div class="row">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
   </body>
</html>
